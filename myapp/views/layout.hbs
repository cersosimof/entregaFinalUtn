<body>
{{!-- NAVBAR --}}
<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
  <h5 class="my-0 mr-md-auto font-weight-normal">CHERSO88</h5>
  <nav class="my-2 my-md-0 mr-md-3">
    {{#if usuario}}
    <a class="p-2 text-dark"  href="../alta">Alta</a>
    <a class="p-2 text-dark" href="/modificar">Modificacion</a>
    <a class="p-2 text-dark" href="/armar">Armar Listado</a>
    <a class="p-2 text-dark" href="/ver">Empresas</a>
    <a class="p-2 text-dark" href="/logout">Logout</a>
    {{else}}
    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#myModal">
      Iniciar sesión
    </button>
    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#modalCrearUsuario">
      Crear usuario
    </button>
    {{/if}}
  </nav>
</div>

{{!-- BODY --}}
<div class="container">
  {{{body}}}
</div>

{{!-- FOOTER --}}
{{#if usuario}}
<footer class="pt-4 my-md-5 pt-md-5 border-top footer">
<div class="row">
  <div class="col-12 col-md">
    <small class="d-block mb-3 text-muted">© 2017-2018</small>
  </div>
  <div class="col-6 col-md">
    <h5>Que desea hacer?</h5>
    <ul class="list-unstyled text-small">
      <li><a class="text-muted" href="/alta">Alta Nuevo Proveedor</a></li>
      <li><a class="text-muted" href="/modificar">Modificar Empresas</a></li>
      <li><a class="text-muted" href="/armar">Armar Listados</a></li>
      <li><a class="text-muted" href="/ver">Buscar Empresas</a></li>
    </ul>
  </div>
  <div class="col-6 col-md">
    <h5>Encuentrenos</h5>
    <ul class="list-unstyled text-small">
      <li><a class="text-muted" href="/contacto">Correo Electronico</a></li>
    </ul>
  </div>
</div>  
</footer>
{{/if}}

{{!-- MODAL INICIAR SESION --}}
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Bienvenido, iniciar sesion para continuar</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/login" method="POST" id="formLogin" onsubmit="">
          <div class="form-group">
            <input type="text" class="form-control" name="user" placeholder="Nombre de usuario">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="pass" placeholder="Contraseña" >
          </div>
          <button type="submit" onclick="" id="BotonIniciar" class="btn btn-primary">Iniciar Sesión</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
        </form>
      </div>
      </div>
    </div>
  </div>
</div>

{{!-- MODAL CREAR USUARIO --}}
<div class="modal fade" id="modalCrearUsuario" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Crear usuario</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/crearusuario" method="POST" id="formLogin">
          <div class="form-group">
            <input type="text" class="form-control" name="newUser" placeholder="Nombre de usuario">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="newPass" placeholder="Contraseña" >
          </div>
          <button type="submit" onclick="" id="BotonIniciar" class="btn btn-primary">Crear Usuario</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
        </form>
      </div>
      </div>
    </div>
  </div>
</div>

