{{#if altaOk}}
<div class="alert alert-success" role="alert">
  {{altaOk}}
</div>
{{else}}
<div class="container">
	<form  action="/alta" method="POST" enctype="multipart/form-data">
		<div class="form-group">
			<label for="idNombre">Nombre o Razon social:</label>
			<input type="text" name="nombre" class="form-control" id="idNombre" required>
		</div>
		<div class="form-group">
			<label for="idCorreo">Correo Electronico:</label>
			<input type="mail" name="correo" class="form-control" id="idCorreo" required>
		</div>
		<div class="form-group">
			<label for="idTel">Telefono:</label>
			<input type="text" name="telefono" class="form-control" id="idTel" required>
		</div>
		<div class="form-group">
			<label for="idContacto">Contacto:</label>
			<input type="text" name="contacto" placeholder="Vendedor, o persona de contacto" class="form-control" id="idContacto" required>
		</div>
		<div class="form-group">
			<label for="irRamo">Ramo que vende:</label>
			<input type="text" name="ramo" class="form-control" placeholder="Libreria, informatica, formularios..."id="idRamo" required>
		</div>
		<div class="form-group">
			<label for="idCuit">Cuit:</label>
			<input type="text" name="cuit" placeholder="sin guiones" class="form-control" id="idCuit" required>
		</div>
		<div class="form-group">
			<input type="file" name="imagen" id="imagen">
		</div>
			<input type="submit" name="Cargar" value="Cargar Proveedor" class="btn btn-primary">
	</form>
</div>
{{/if}}



