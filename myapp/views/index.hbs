<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  {{#if usuario}}
  <h1 class="display-4">Hola {{usuario}}</h1>
  <p class="lead">Bienvenido al maestro de proveedores de provincia seguros, al inscribirse reibira nuestros pedidos de cotizacion</p>
  {{else}}
  <h2>Bienvenido, inicie sesión para continuar</h2>
  {{!-- CARRUSEL DE BOOTSTRAP --}}
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="/imagenesWeb/compra1.jpg" alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="/imagenesWeb/compra2.jpg" alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="/imagenesWeb/compras3.jpg" alt="Third slide">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  {{/if}}
</div>

{{!-- MODAL --}}
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Bienvenido, iniciar sesion para continuar</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/login" method="POST" id="formLogin" onsubmit="">
          <div class="form-group">
            {{!-- <label for="recipient-name" class="col-form-label">Usuario:</label> --}}
            <input type="text" class="form-control" name="user" placeholder="Nombre de usuario">
          </div>
          <div class="form-group">
            {{!-- <label for="message-text" class="col-form-label">Contraseña:</label> --}}
            <input type="password" class="form-control" name="pass" placeholder="Contraseña" >
          </div>
          {{!-- <div class="modal-footer"> --}}
          <button type="submit" onclick="" id="BotonIniciar" class="btn btn-primary">Iniciar Sesion</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">No, gracias.</button>
        </form>
      </div>
      </div>
    </div>
  </div>
</div>
